[context]
window_mode = "inherit"
# Required when window_mode = "fixed"
# window_tokens = 200000
prune_mode = "disabled"
compaction_authority = "moon"
compaction_start_ratio = 0.5
compaction_emergency_ratio = 0.90

[watcher]
poll_interval_secs = 30
cooldown_secs = 60

[distill]
mode = "daily"
idle_secs = 360
max_per_cycle = 3
residential_timezone = "UTC"
topic_discovery = true

[retention]
active_days = 7
warm_days = 30
cold_days = 31

[embed]
mode = "manual"
idle_secs = 600
cooldown_secs = 300
max_docs_per_cycle = 25
min_pending_docs = 1
max_cycle_secs = 90

[inbound_watch]
enabled = false
recursive = true
watch_paths = []
event_mode = "now"
